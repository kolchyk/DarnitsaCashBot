# Telegram Bot
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_WEBHOOK_URL=
TELEGRAM_ADMIN_IDS=
# API Gateway URL (used by telegram bot to connect to API)
API_GATEWAY_URL=http://localhost:8000

# Database (PostgreSQL)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=darnitsa_cashbot
POSTGRES_USER=darnitsa
POSTGRES_PASSWORD=darnitsa
# Или используйте Heroku DATABASE_URL:
# DATABASE_URL=postgresql://user:password@host:port/dbname

# Storage (MinIO/S3)
STORAGE_ENDPOINT=http://localhost:9000
STORAGE_BUCKET=receipts
STORAGE_ACCESS_KEY=miniokey
STORAGE_SECRET_KEY=miniopass

# RabbitMQ
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_DEFAULT_USER=guest
RABBITMQ_DEFAULT_PASS=guest
# Или используйте Heroku CLOUDAMQP_URL:
# CLOUDAMQP_URL=amqp://user:password@host:port/vhost

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
# Или используйте Heroku REDIS_URL:
# REDIS_URL=redis://host:port

# (Optional) Legacy EasyPay API
EASYPAY_API_BASE=http://localhost:8080
EASYPAY_MERCHANT_ID=merchant
EASYPAY_MERCHANT_SECRET=secret

# Portmone Direct API
# Получите эти данные от менеджера Portmone
PORTMONE_LOGIN=your_portmone_login_here
PORTMONE_PASSWORD=your_portmone_password_here
PORTMONE_VERSION=2
PORTMONE_API_BASE=https://direct.portmone.com.ua/api/directcash/
PORTMONE_LANG=uk
PORTMONE_PAYEE_ID=your_payee_id_here
PORTMONE_DEFAULT_CURRENCY=UAH
# Путь к TLS сертификату (если требуется)
PORTMONE_CERT_PATH=
# Токен для вебхуков Portmone
PORTMONE_WEBHOOK_TOKEN=your_webhook_token_here

# Security
ENCRYPTION_SECRET=your_encryption_secret_here_min_32_chars
JWT_SECRET=jwt-secret-change-in-production
JWT_ALG=HS256

# OpenTelemetry (опционально)
OTEL_EXPORTER_OTLP_ENDPOINT=

# Prometheus (опционально)
PROMETHEUS_MULTIPROC_DIR=

# OCR Configuration
TESSERACT_CMD=
TESSDATA_DIR=
OCR_LANGUAGES=ukr+rus+eng
OCR_AUTO_ACCEPT_THRESHOLD=0.8
OCR_MANUAL_REVIEW_THRESHOLD=0.4
OCR_TOTALS_TOLERANCE_PERCENT=1.0
OCR_STORAGE_PREFIX=ocr-artifacts
OCR_ARTIFACT_TTL_DAYS=90
OCR_SAVE_PREPROCESSED=true
OCR_VENDOR_FALLBACK_ENABLED=false

# Application
APP_ENV=local
LOG_LEVEL=INFO

